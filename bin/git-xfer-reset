#!/bin/bash
#
# reset git xfer and remove all caches
# 
# @author <bprinty@gmail.com>
# ------------------------------------------------

# meta
# ----
usage() {
    echo "usage: git xfer reset [options] <remote>"
    echo ""
    echo "Options:"
    echo "  -h | --help              Show help and exit."
}


# exec
# ----
xrun() {
    if [ "$#" -lt 1 ]; then
        usage; exit 1
    fi

    case "$1" in
        "-h"|"--help")
            usage; exit 0
            ;;
    esac

    dest="$1"
    rm -f "$cachedb/cache-$dest"
}
