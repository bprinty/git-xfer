#!/usr/bin/env sh
#
# sync functionality of git-xfer plugin
# 
# @author <bprinty@gmail.com>
# ------------------------------------------------


# meta
# ----
usage() {
    echo "usage: git xfer sync [options] <remote>"
    echo ""
    echo "Options:"
    echo "  -h | --help              Show help and exit."
    echo "  -p | --port              Explicitly set port for remote."
}


# exec
# ----
xrun() {

    if [ "$#" -lt 1 ]; then
        usage; exit 1
    fi

    case "$1" in
        "-h"|"--help")
            usage; exit 0
            ;;
        "-p"|"--port")
            port="$1": shift
            ;;
    esac
    
    # verify remote
    dest="$1"
    remote=`git remote -v | grep "$dest" | awk '{ print $2 }' | uniq | sed 's/\.git$//'`
    if [ ! "$remote" ]; then
        echo 'cannot find remote -- try git remote add <remote> <url>'
    fi

    # initialize cache folder
    mkdir -p "$cachedb"
    touch "$cachedb/cache-$dest"

    # update remote
    if [ -z $port ]; then
        port=`xremoteport "$remote"`
    fi
    url=`xremoteurl "$remote"`
    repo=`xremoterepo "$remote"`
    branch=`git branch | grep '* '| sed 's/\* //g'`
    rcache=`echo "$cache" | sed "s|$base|$repo|g"`
    >&2 echo "Syncing remote repo..."
    if [ "$url" ]; then
        ssh -p $port "$url" "cd \"$repo\" && git checkout \"$branch\" && git pull && touch \"$rcache\""
        scp -P $port "$url:\"$rcache\"" "$cachedb/cache-$dest"
    else
        pushd "$repo" &>/dev/null
        git checkout "$branch" && git pull
        touch "$rcache"
        cat "$rcache" > "$cachedb/cache-$dest"
        popd 2>&1 1>/dev/null
    fi

    # re-sorting to account for different system sorting algorithms
    sort "$cachedb/cache-$dest" | uniq > "$cachedb/cache-$dest.lck"
    mv "$cachedb/cache-$dest.lck" "$cachedb/cache-$dest"

    exit 0
}
