#!/bin/bash
#
# push functionality of git-xfer plugin
# 
# @author <bprinty@gmail.com>
# ------------------------------------------------


# meta
# ----
usage() {
    echo "usage: git xfer add [options] <file>"
    echo ""
    echo "Options:"
    echo "  -h | --help              Show help and exit."
}


# exec
# ----
add(){
    # TODO: look at printf way of string escaping
    fname=`xescape "$1"`
    echo "$fname" >> "$cache"
    sort "$cache" | uniq > "$cache.lck"
    mv "$cache.lck" "$cache"
}

xrun() {
    if [ "$#" -lt 1 ]; then
        usage; exit 1
    fi

    case "$1" in
        "-h"|"--help")
            usage; exit 0
            ;;
    esac

    touch "$cache"
    OLDIFS=$IFS;
    IFS="$(printf '\n\t')"
    for i in "$@"; do
        if [ "$i" = "." ]; then
            fullpath="`pwd`"
        else
            fullpath=$(cd "$(dirname $i)" && pwd -P)/$(basename "$i")
        fi
        if [ -d "$fullpath" ]; then
            find "$fullpath" -type f -exec git xfer add {} \;
        else
            add "$fullpath"
        fi
    done
    IFS=$OLDIFS
}
