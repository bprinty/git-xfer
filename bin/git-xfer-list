#!/usr/bin/env sh
#
# push functionality of git-xfer plugin
# 
# @author <bprinty@gmail.com>
# ------------------------------------------------


# meta
# ----
usage() {
    echo "usage: git xfer list [options] [<remote>]"
    echo ""
    echo "Options:"
    echo "  -h | --help              Show help and exit."
}


# exec
# ----
xrun() {

    local FILES="FALSE"

    case $1 in
        "-h"|"--help")
            usage; exit 0
            ;;
    esac

    if [ ! -z $1 ]; then
        # TODO: ssh into server and do git xfer list
        echo 'Not Yet Implemented!'; exit 1
    fi

    if [ ! -e "$cache" ]; then
       echo ''; exit 0
    fi

    cat "$cache"
}
